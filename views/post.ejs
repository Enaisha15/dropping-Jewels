<body>
<div class="container">

   

    <div class="row">
      <div class="col-sm-6">
        <h3>Posts</h3>
        <ul class="messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message">
              
              <%# Image Header %>
              
              <% if (posts[i].caption.length == 0) { %>
                <h4>Nothing</h4>
              <% } else { %>
                <h4><%= posts[i].caption %></h4>
              <% } %>
              <img src="../<%= posts[i].img %>" alt="">

              <%# Like %>
              <button class="like" data-value="<%=posts[i]._id %>">like</button>
              <span><%= posts[i].like %></span>
              <%# delete %>
              <button class="delete" data-value="<%=posts[i]._id %>">Delete</button>
              <span><%= posts[i].delete %></span>

              <%# View Comments %>
              <ul>
                <% for(var j=0; j<posts[i].comment.length; j++) {%>
                  <li>
                    <p> <%= posts[i].comment[j].comment %> </p> 
                  </li>
                <% } %>
              </ul>>
              
             <form method= post action="/post/comments/submit">
              <%# Post Comment %>
              <input name="comment" class="userComment" type="text" placeholder="write a comment...">
              <input name="postId" value="<%=posts[i]._id%>" class="userComment" type="hidden" placeholder="write a comment...">

              <button type="submit" class="sendComment" data-value="<%=posts[i]._id %>">post</button>
            </form>
            </li>
          <% } %>
       
        </ul>
      </div>
